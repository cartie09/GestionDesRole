<button type="button" class="btn btn-default filter" data-toggle="collapse" data-target="#filter">{{ 'Show/hide filters'|trans({}, 'admin') }} <i class="fa fa-angle-{{ app.session.get('filter.user') ? 'right' : 'down' }}"></i></button>
<div id="filter" class="collapse {% if app.session.get('filter.user') %} in{% endif %}">
    <form method="get" action="">
      {# {{ form_widget(form) }} #}   
        <br>
        <p>
          {{ form_label(form, 'Nom d\'utilisateur', { 'label_attr': {'class': 'monlabel'} }) }}

{{ form_widget(form.username, { 'attr': {'class': 'moninput'} }) }}
         </p>
         <p>
          {{ form_label(form, 'Email', { 'label_attr': {'class': 'monlabel'} }) }}

{{ form_widget(form.tel, { 'attr': {'class': 'moninput'} }) }}
        </p>
 <br> <br>

        <p class="btn-group">
            <button class="btn btn-primary" type="submit" name="submit-filter"><i class="fa fa-filter"></i> {{ 'Filter'|trans({}, 'admin') }}</button>
            <a class="btn btn-default" href="?reset-filter"><i class="fa fa-times"></i> {{ 'Reset filters'|trans({}, 'admin') }}</a>
        </p>
    </form>
</div>
